<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
<div class="panel panel-default">
<div class="panel-heading"><h2 class="center">Sign up for free!</h2></div>
<div class="panel-body">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class=form-group>
    <%= f.text_field :name, :placeholder => "Your full name", :class => 'form-control', :autofocus => true %></div>

  <div class=form-group>
    <%= f.email_field :email, :placeholder => "Your email address", :class => 'form-control', :autofocus => true %></div>

  <div class=form-group>
  <%= f.password_field :password, :placeholder => "Your super-secret password", :class => 'form-control' %></div>

  <div class="form-group"><%= f.submit "Sign up", class: "btn btn-primary form-control" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>

