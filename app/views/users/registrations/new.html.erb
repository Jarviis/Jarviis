<section id="sign-form">
<h2>Welcome, stranger!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.email_field :email, :autofocus => true, :placeholder => "example@gmail.com" %></div>

  <div>
  <%= f.text_field :name, :autofocus => true, :placeholder => "John Doe" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Super secret password"%></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "...one more time" %></div>

  <div><%= f.submit "Create my account", :class => "btn btn-success" %></div>
<% end %>

<%= render "users/shared/links" %>
</section>
