<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
<div class="panel panel-default">
<div class="panel-heading"><h2 class="center">Sign In</h2></div>
<div class="panel-body">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class=form-group>
    <%= f.email_field :email, :placeholder => "Your email address", :class => 'form-control', :autofocus => true %></div>

  <div class=form-group>
  <%= f.password_field :password, :placeholder => "Your super-secret password", :class => 'form-control' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="form-group"><%= f.submit "Sign in", class: "btn btn-primary form-control" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>

