        <input type="text" name="reporter_id" id="reporter" placeholder="Reporter" />
        <input type="text" name="due_date" id="due-date" placeholder="eg. 1 Apr 14" />
        <textarea name="description" placeholder="Write some details..." id= rows="8" cols="40"></textarea>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
